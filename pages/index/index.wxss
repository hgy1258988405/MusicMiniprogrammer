/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  background-color: #FBFCFE;
  /* background-image: url(http://upload.pig66.com/toutiao/1952035-b092e578344e80b06aa41e4814e590f3); */
}
.background_img{ 
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}  
.index_header{
  width:100%;
}
/* 开启定位 */
swiper-item{
  position: relative;
}
scroll-view{
  height: 100%;
}
/* 搜索栏 */
.weui-search-bar{
  /* #DC4238 */
  background-color:#44CEFE;
  border: 1px  solid #44CEFE;
}
.weui-search-bar__box{
  position: relative;
}
.weui-icon-search_in-box{
  position: absolute;
  left: 50%;
  transform:translateX(-50%);
}
.weui-search-bar__label{
  /* width: 80%; */
  background-color: #C9EAFC;
  border: 1px solid #44CEFE;
  border-radius: 20rpx;
}
.weui-search-bar__from{
  height: 65rpx;
}
.weui-search-bar__text{
  font-size: 14px;
  color: #97A1A5; 
  
  margin-bottom: 5rpx;
}
/* 顶部样式 */
.swiper_header{
background-color: #44CEFE;
padding-bottom: 10rpx
}
/* 设置推荐标题 */
.swiper_header_title_1{
  display:inline-block;
  text-align: center;
  width: 50%;
  color: #ffffff;
  font-size: 15px;
  box-sizing: border-box;
}
/*设置 MV标题*/
.swiper_header_title_2{
  display:inline-block;
  text-align: center;
  width: 50%;
  color: #ffffff;
  font-size: 15px;
  box-sizing: border-box;
}
/* 设置选中下划线 */
.weui-navbar-slider{
  width:28px;
  height: 5px;
  background: #ffffff;
  border-radius:10rpx;
  transition: transform .6s; 
 }
 /* 所有歌单轮播样式 */
 .Allswiper{
  width:100%;
  height: 100%;
}
 /* 设置最新音乐 所有盒子的样式 */
 .songsheet_items_allbox{
  margin-top: 25rpx;
}
/* 小内容块的标题 */
.songsheet_container_title{
  font-size: 17px;
  font-weight: bold;
  padding-left: 10rpx;
}
/* 每首歌封面的样式 */
.songsheet_container_image{
  width: 95%;
  height: 220rpx;
  /* padding: 10rpx; */
  margin: 5rpx;
  border-radius: 8rpx;
}
/* 文字样式 */
.songsheet_container_text{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;  
  -webkit-box-orient: vertical;
  font-size: 13px;
  margin-top: 10rpx;
  padding-left: 10rpx;
}
/* 主页歌单盒子样式 */
.songsheet_item_box{
  padding-top: 10rpx;
  width: 33%;
  display: inline-block;
  box-sizing: border-box;
  
}
/* “更多”盒子的样式 */
.title_leader_box{
  color:gray;
  text-align:center;
  font-size:14px ;
  display: inline-block;
  position: absolute;
  right: 5px;
}
/* “更多”文字的样式 */ 
.title_leader{
  width: 16px;
  height: 16px;
  color:gray;
  display: inline-block;
  vertical-align:middle;
}

.newsong_allbox{
  margin-bottom: 40rpx;
}
/* 歌名样式 */
.newsong_songname{
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;  
  -webkit-box-orient: vertical;
}
/* 作者样式 */
.newsong_artists{
  font-size: 10px;
  padding-left: 10rpx;
  padding-top: -10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;  
  -webkit-box-orient: vertical;
}
/* 巅峰榜样式 */

.toplist_items_box{
  width:95%;
  margin: 0 5rpx ;
  background-color: #F8F8F8;
  border-radius: 30rpx;
  display:flex ;
  flex-direction: row; 
  margin-bottom: 20rpx;
}
.toplsit_song_box{
  margin-left: 15rpx;
  margin-top: 10rpx;
  display:flex ;
  flex-direction: column; 
  height: 33%;
  width: 66%;
}
.topsong_box{
  display: flex;
  margin-left: 10rpx;
  flex-direction: row;
  border-bottom: 1px solid #deeef0;
  height: 32px;
}
.song_index{
  font-size: 16px bold;
  height: 32px;
  line-height: 32px;
}
.topsong{
  margin-left: 4px;
  display:flex ;
  flex-direction: column;
  overflow: hidden;
}

.topsongname{
  height: 18px;
  overflow: hidden;
  font-size: 12px;
}
.topsongart{
  height: 14px;
  overflow: hidden;
  font-size: 10px;
}

.recommend_mv{
  padding-top: 10rpx;
  margin-left: 3.3%;
  width: 45%;
  display: inline-block;
  box-sizing: border-box;
}


