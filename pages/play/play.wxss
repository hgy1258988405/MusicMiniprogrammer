.sing-brief {
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}
.sing-name {
  height: 60rpx;
  font-size: 18px;
  color: #000000;
  width:92%;
  right:0;
  display:initial;
  overflow: hidden;
}
.singer-name{
  display:flex;
  font-size:13px;
  color:#000000;
  text-align:center;
  line-height:12px;
  justify-content:center;
  overflow: hidden;
}
.singer-name-text{
  padding-left: 5rpx;
  padding-right: 5rpx;
  overflow: hidden;
}
.sing-show {
  position: relative;
  width: 100%;
  height: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.coverImg {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  top:28%;
  left: 23%;
  position: absolute;
  border: 3px solid #000000;
  animation: rotate 15s linear infinite ;
  animation-play-state: paused;
}

.moveCircle.play {
  animation: moveCircle 2.5s linear infinite ;
  animation-fill-mode: forwards;
}
.hide{
  display: none;
}
@keyframes rotate {
  0%{
    transform: rotate(0);
  }
  100%{
    transform: rotate(360deg);
  }
}
.songLyric{
  color: #000000;
  font-size: 14px;
}
